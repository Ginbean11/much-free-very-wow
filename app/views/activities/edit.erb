    <div class="row">
      <div class="col-12">
        <h4>Please enter your changes below and click Save Changes</h4>
        <form action="/activities/<%= @activity.slug %>" method="post">
          <input type="hidden" name="_method" value="patch">

          <label for="title">Title: </label>
          <input type="text" name="activity[title]" id="title" value="<%= @activity.title %>" />

          <br /><br />

          <label for="date">Date: </label>
          <input type="date" name="activity[date]" id="date" value="<%= @activity.date %>" />

          <br /><br />

          <label for="category">Category: </label>
          <select name="activity[category]" id="category">
          <% Activity.default_categories.each do |category| %>
            <option value="<%= category %>" <%= 'selected' if @activity.category == category %>><%= category.titleize %></option>
          <% end %>
          </select>

          <br /><br />

          <label for="description">Description </label><br />
          <textarea name="activity[description]" id="description" cols="50" rows="10"><%= @activity.description %></textarea>

          <br /><br />

          <input type="submit" value="Save Changes" />
        </form>
      </div>
    </div>
