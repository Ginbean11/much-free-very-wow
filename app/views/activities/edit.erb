<html>
  <head>
    <meta charset="UTF-8">
    <title>Edit an Activity</title>
  </head>
  <body>
    <form action="/activities/<%= @activity.slug %>" method="post">
      <input type="hidden" name="_method" value="patch">

      <label for="title">Title: </label>
      <input type="text" name="activity[title]" id="title" value="<%= @activity.title %>" />

      <label for="date">Date: </label>
      <input type="date" name="activity[date]" id="date" value="<%= @activity.date %>" />

      <label for="category">Category: </label>
      <select name="activity[category]" id="category">
      <% Activity.default_categories.each do |category| %>
        <option value="<%= category.downcase %>"><%= category %></option>
      <% end %>
      </select>

      <label for="description">Description: </label>
      <textarea name="activity[description]" id="description" cols="50" rows="10"><%= @activity.description %></textarea>

      <input type="submit" value="Submit Changes" />
    </form>
  </body>
</html>
