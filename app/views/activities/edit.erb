<html>
  <head>
    <meta charset="UTF-8">
    <title>Edit an Activity</title>
  </head>
  <body>
    <form action="/activities/<%= @activity.id %>" method="post">
      <input type="hidden" name="_method" value="patch">

      <label for="title">Title: </label>
      <input type="text" name="title" id="title" value="<%= @activity.title %>" />

      <label for="date">Date: </label>
      <input type="date" name="date" id="date" value="<%= @activity.date %>" />

      <label for="category">Category: </label>
      <select name="category" id="category">
      <% Activity.all_categories.each do |category| %>
        <option value="<%= category %>"><%= category %></option>
      <% end %>
      </select>

      <label for="description">Description: </label>
      <textarea name="description" id="description" cols="50" rows="10"><%= @activity.description %></textarea>

      <input type="submit" />
    </form>
  </body>
</html>
