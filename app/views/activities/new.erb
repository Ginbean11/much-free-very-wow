<html>
  <head>
    <meta charset="UTF-8">
    <title>Create New Activity</title>
  </head>
  <body>
    <form action="/activities" method="post">
      <label for="title">Title: </label>
      <input type="text" name="activity[title]" id="title" />

      <label for="date">Date: </label>
      <input type="date" name="activity[date]" id="date" />

      <label for="category">Category: </label>
      <select name="activity[category]" id="category">
        <% Activity.all_categories.each do |category| %>
        <option value="<%= category %>"><%= category %></option>
        <% end %>
      </select>

      <label for="description">Description: </label>
      <textarea name="activity[description]" id="description" cols="50" rows="10"></textarea>

      <input type="submit" />
    </form>
  </body>
</html>
