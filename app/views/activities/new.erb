      <div class="row">
        <div class="col-12">
          <form action="/activities" method="post">
            <h4>Please fill out all the fields and click Create Activity</h4>
            <label for="title">Title: </label>
            <input type="text" name="activity[title]" id="title" />

            <br /><br />

            <label for="date">Date: </label>
            <input type="date" name="activity[date]" id="date" />

            <br /><br />

            <label for="category">Category: </label>
            <select name="activity[category]" id="category">
              <% Activity.default_categories.each do |category| %>
              <option value="<%= category %>"><%= category.titleize %></option>
              <% end %>
            </select>

            <br /><br />

            <label for="description">Please provide a description</label><br />
            <textarea name="activity[description]" id="description" cols="50" rows="10"></textarea>

            <input type="hidden" name="activity[user_id]" id="user_id" value="<%= @user.id %>" />

            <br /><br />

            <input type="submit" value="Create New Activity"/>

          </form>
        </div>
      </div>
