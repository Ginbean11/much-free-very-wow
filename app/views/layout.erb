<html>
  <head>
    <meta charset="UTF-8">
    <link rel="stylesheet" href="/css/simple-grid.scss">
    <title>Much Free, Very Wow</title>
  </head>
  <body>
    <div class="container">
      <div class="row">

        <div class="col-3">
          <h1>Much Free, Very Wow</h1>
        </div>

        <div class="col-7">
        </div>

        <div class="col-2">
          <% if !logged_in? %>
            <h1><a href="/signup">Sign Up</a> | <a href="/login">Log In</a></h1>
          <% else %>
            <!-- <h4>Welcome, <%= current_user.username.capitalize %></h4> -->
            <h1><a href="/activities/new">Add New Activity</a> | <a href="/logout">Log Out</a></h1>
          <% end %>
        </div>

      </div>


      <%= yield %>
    </div>
  </body>
</html>
